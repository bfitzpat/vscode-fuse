{
	"name": "fuse-view",
	"displayName": "Fuse View",
	"description": "Working towards a custom view in VS Code for Fuse items",
	"version": "0.0.1",
	"publisher": "camel-tooling",
	"enableProposedApi": false,
	"engines": {
		"vscode": "^1.25.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "fuse-explorer",
					"title": "Fuse Explorer",
					"icon": "media/f-inside-a-circle.svg"
				}
			]
		},
		"views": {
			"fuse-explorer": [
				{
					"id": "nodeOutline",
					"name": "Fuse Dummy View"
				}
			]
		},
		"commands": [
			{
				"command": "extension.sayHello",
				"title": "List stuff"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"@types/mkdirp": "^0.5.2",
		"@types/node": "*",
		"@types/rimraf": "^2.0.2",
		"tslint": "^5.11.0",
		"typescript": "^2.1.4",
		"vscode": "^1.1.33"
	},
	"dependencies": {
		"jsonc-parser": "^0.4.2",
		"ftp": "^0.3.10",
		"mkdirp": "^0.5.1",
		"rimraf": "^2.6.2"
	}
}
